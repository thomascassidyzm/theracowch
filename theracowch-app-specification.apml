app TheracowchApp:
  title: "Theracowch - Daily Anxiety Reduction Through Playful Coaching"
  description: "Interactive daily habit-building app using Mandy's IMAGINE framework for practical anxiety management"
  version: "1.0.0"
  apml_specification_version: "1.0.0"
  last_updated: "2025-09-15"
  
  pss_compliance:
    structure_standard: "APML-PSS v1.0.0"
    self_documentation: enabled
    universal_navigation: optimized
  
  deterministic_compilation:
    target_platform: "Vue3 + TypeScript + Tailwind"
    alternative_targets: ["PWA", "React + TypeScript"]
    compilation_guarantee: identical_input_produces_identical_output
    
  brand_identity:
    domain: "theracowch.com"
    personality: playful_therapeutic_coaching
    mascot: ai_mandy_cow_character
    tone: warm_encouraging_gently_humorous

  design_system:
    background_color: white_or_light_peach
    logo_presentation: cow_only_no_heart_emoji_no_yellow_circle
    navigation_order: explore_imagine_before_moove_to_cowch
    
  triadic_compliance:
    trinity_messaging: complete_user_interaction_coverage
    implementation_triad: coaching_habits_progress_tracking
    collaborative_intelligence: ai_mandy_human_user_therapeutic_ecosystem

data User:
  user_id: unique_id required
  username: text required
  email: email required
  created_at: timestamp required
  preferences: UserPreferences required
  conversation_history: list of ConversationEntry required
  mood_tracking: list of MoodEntry required
  imagine_progress: ImagineProgress required

data UserPreferences:
  notification_settings: NotificationSettings required
  privacy_settings: PrivacySettings required
  ai_mandy_personality: text default "encouraging"
  daily_goal_reminders: boolean default true
  quote_categories: list of text default ["motivation", "anxiety", "self_care"]

data ConversationEntry:
  entry_id: unique_id required
  timestamp: timestamp required
  user_message: text required
  ai_mandy_response: text required
  imagine_section: text optional
  mood_before: number optional
  mood_after: number optional
  context_photo: text optional

data MoodEntry:
  entry_id: unique_id required
  timestamp: timestamp required
  mood_level: number required
  mood_description: text optional
  activity: text optional
  location_photo: text optional
  notes: text optional
  imagine_sections_used: list of text optional

data ImagineProgress:
  self_care_streak: number default 0
  mindfulness_streak: number default 0
  acceptance_streak: number default 0
  gratitude_streak: number default 0
  interactions_streak: number default 0
  nurturing_streak: number default 0
  exploring_streak: number default 0
  total_sessions: number default 0
  favorite_sections: list of text default []

data DailyQuote:
  quote_id: unique_id required
  quote_text: text required
  author: text default "Mandy Kloppers"
  source_url: text optional
  category: text required
  last_shown: timestamp optional

data SoothingOneLiner:
  message_id: unique_id required
  message_text: text required
  context: text required
  category: text required
  last_shown: timestamp optional

